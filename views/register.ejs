<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/public/images/favicon.png">
  <link rel="apple-touch-icon" href="/public/images/favicon.png">

  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Background Image -->
  <div class="background-image"></div>
  
  <%- include('partials/navbar') %>
  
  <main class="main-content">
    <div class="auth-container">
      <div class="auth-box">
        <div class="auth-header">
          <h2 class="auth-title">Create Account</h2>
          <p class="auth-subtitle">Join VigilCam to start monitoring</p>
        </div>

        <%- include('partials/messages') %>
        
        <form action="/users/register" method="POST" class="auth-form">
          <div class="form-group">
            <label for="name" class="form-label">Full Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              class="form-input"
              placeholder="New User"
              value="<%= typeof name !== 'undefined' ? name : '' %>"
              required
            >
          </div>
          
          <div class="form-group">
            <label for="email" class="form-label">Email Address</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="form-input"
              placeholder="your.email@domain.com"
              value="<%= typeof email !== 'undefined' ? email : '' %>"
              required
            >
          </div>
          
          <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input 
              type="password" 
              id="password" 
              name="password" 
              class="form-input"
              placeholder="Create a strong password"
              required
            >
            <small class="form-help">Minimum 6 characters</small>
          </div>
          
          <div class="form-group">
            <label for="password2" class="form-label">Confirm Password</label>
            <input 
              type="password" 
              id="password2" 
              name="password2" 
              class="form-input"
              placeholder="Confirm your password"
              required
            >
          </div>
          
          <button type="submit" class="btn-primary btn-block btn-large">
            Create Account
          </button>
        </form>
        
        <div class="auth-footer">
          <p>Already have an account? <a href="/login" class="auth-link">Sign in</a></p>
        </div>
      </div>
    </div>
  </main>
  
  <%- include('partials/footer') %>
  
  <script src="/js/main.js"></script>
</body>
</html>