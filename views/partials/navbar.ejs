    <ul class="nav-menu" id="navMenu">
    <% if (typeof user !== 'undefined' && user) { %>
      <li><a href="/" class="nav-link">Dashboard</a></li>
      <li><a href="/monitoring" class="nav-link">Monitoring</a></li>
      <li><a href="/history" class="nav-link">History</a></li>
